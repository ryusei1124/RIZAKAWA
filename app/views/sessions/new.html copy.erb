<% provide(:title, "") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h1>ログイン</h1>
      <%= form_with(scope: :session, url: login_path, local:true) do |f| %>
      
        <%= f.label t(".email"), class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label t(".password"), class: "label-login" %>
        <%= link_to "パスワードを忘れた場合はこちら", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.hidden_field :reservation_id, value:params[:reservation_id] %>
        <%= f.hidden_field :student_id, value:params[:student_id] %>
        <%= f.label :remember_me, class: "checkbox checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span class="remember-span">ログイン情報を記憶する</span>
        <% end %>
        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
  </div>
</div>

  <% if Rails.env.development? %>
    <div class="center jumbotron">
      <p>動作確認は↓からどうぞ</p>
      <%= link_to "管理者", login_path, method: :patch, class: "btn btn-lg btn-primary" %>
      <%= link_to "生徒", login_path, method: :put, class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
